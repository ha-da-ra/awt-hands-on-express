<li class="book-item">
    <h1>
        <%= book.title %>
    </h1>
    <h2>by <%= book.author %>
    </h2>
    <div class="rating">
        <%# Start Task 4 %>

        <p>Rating:  <%= book.rating%></p>

        <%# End Task 4 %>
    </div>
    <div class="already-read">
        <p>Already Read: <span>
                <%= book.alreadyRead ? "Yes" : "No" %>
            </span></p>
    </div>
    <a class="add-book-link" href="/books/<%= book._id %>/read">Mark Read</a>
</li>