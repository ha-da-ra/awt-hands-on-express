<li class="book-item">
    <h1>
        <%= book.title %>
    </h1>
    <h2>by <%= book.author %>
    </h2>
    <div class="rating">
        <%# Start Task 4 %>

        <% if (book.rating !== undefined) { 
            for (let i=0; i < 10; i++) { 
                if (book.rating > i) {%>
                    <span class="star filled">&#9733;</span>
            <%  } else {%>
                    <span class="star">&#9734;</span>
            <%  }
            }
        } %>

        <%# End Task 4 %>
    </div>
    <div class="already-read">
        <p>Already Read: <span>
                <%= book.alreadyRead ? "Yes" : "No" %>
            </span></p>
    </div>
    <a class="add-book-link" href="/books/<%= book._id %>/read">Mark Read</a>
</li>